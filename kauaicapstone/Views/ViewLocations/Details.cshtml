@model kauaicapstone.Models.ViewLocation

@{
    ViewData["Title"] = "Details";
}



<div>
    <h4>location details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ViewPointAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ViewPointAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.Name("Associated Legends")
        </dt>
        <dt class="col-sm-2">
            @Html.Name("Comments")
        </dt>




    </dl>
    <div>
        <dl>
            @foreach (var item in Model.LegendViewLocations)
            {
                <dd>
                    <a asp-controller="Legends" asp-action="Details" asp-route-id="@item.ViewLocation.ViewLocationId">@Html.DisplayFor(modelItem => item.Legend.Title)</a>
                </dd>
            }
        <dd class="col-sm-2">
            @if (Model.Comments != null)
            {
                @foreach (var item in Model.Comments)
                {
                    <p> @Html.DisplayFor(modelItem => item.Message)</p>;
                    @Html.DisplayFor(modelItem => item.DatePosted) <br />;

                }
            }
            <div class="form-group form-check">
                <label class="form-check-label">
                    <a asp-controller="ViewLocations" asp-action="Favorite" name="ViewLocationId" class="btn btn-primary" asp-route-id="@Model.ViewLocationId"> save to favorite </a>
                </label>
            </div>

            <form asp-action="Create" method="post">
                <div class="form-group">
                    <textarea class="form-control"> </textarea>
                    <span asp-validation-for="@Model.Comments" class="text-danger"></span>
                    <idiv> <input type="submit" value="add comment" class="btn btn-primary" /></idiv>
                </div>
            </form>


        </dd>
            </dl>
            

</div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ViewLocationId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
